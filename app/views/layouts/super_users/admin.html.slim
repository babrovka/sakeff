doctype html
html
  head
    title
      | Super User Dashboard
    = stylesheet_link_tag    'super_admin', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'super_admin', 'data-turbolinks-track' => true
    = csrf_meta_tags
  body
    = render 'shared/server_title'
    .container
      nav.navbar.navbar-default
        .container-fluid
        /! Brand and toggle get grouped for better mobile display
        .navbar-header
          = link_to 'САКЭ', super_user_root_path, class: 'navbar-brand'
        /! Collect the nav links, forms, and other content for toggling
        .navbar-collapse
          ul.nav.navbar-nav
            li = link_to 'Пользователи', '#'
            li = link_to 'Организации', super_user_organizations_path

          = render 'shared/admin/super_users/user_bar'

      .row
        = yield
